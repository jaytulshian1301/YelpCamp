<% layout('boilerplate') -%>
<div class="container">
  <h1 class="text-center mb-5">Edit Campground</h1>
  <div class="row">
    <div class="col-6 offset-3">
      <form
        class="needs-validation"
        action="/campgrounds/<%= campground._id %>?_method=PATCH "
        method="POST"
        novalidate
      >
        <label for="title" class="form-label">Title</label>
        <div class="input-group mb-3">
          <input
            type="text"
            class="form-control"
            id="title"
            name="campground[title]"
            value="<%= campground.title %>"
            required
          />
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Title is required</div>
        </div>

        <label for="location" class="form-label">Location</label>
        <div class="input-group mb-3">
          <input
            type="text"
            class="form-control"
            id="location"
            name="campground[location]"
            value="<%= campground.location %> "
            required
          />
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Location is required</div>
        </div>

        <label for="image-url" class="form-label">Image URL</label>
        <div class="input-group mb-3">
          <input
            type="text"
            readonly
            class="form-control"
            id="image-url"
            value="<%= campground.img%>"
            name="campground[img]"
          />
        </div>

        <label for="description" class="form-label">Description</label>
        <div class="input-group mb-3">
          <textarea
            type="text"
            class="form-control"
            id="description"
            aria-describedby="description"
            name="campground[description]"
            required
          >
          <%= campground.description %> 
        </textarea
          >
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Description is required</div>
        </div>

        <label for="price" class="form-label">Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text">&#8377;</span>
          <!-- TODO: Price isn't shown in the price field-->
          <% console.log(campground.price) %>
          <input
            type="number"
            id="price"
            class="form-control"
            min="0"
            aria-label="price-label"
            name="campground[price]"
            value="<%= campground.price %> "
            required
          />
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Price is required</div>
        </div>

        <a class="btn btn-danger" href="/campgrounds/<%= campground._id %> "
          >Cancel</a
        >
        <button class="btn btn-warning">Update Campground</button>
      </form>
    </div>
  </div>
</div>

<script>
  (function () {
    "use strict";

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.querySelectorAll(".needs-validation");

    // Loop over them and prevent submission
    Array.prototype.slice.call(forms).forEach(function (form) {
      form.addEventListener(
        "submit",
        function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }

          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>
